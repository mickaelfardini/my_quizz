{% extends 'base.html.twig' %}

{% block title %} Registration {% endblock %}

{% block body %}
	<div class="container">
		<div class="row text-center">
			<div class="col-sm-6 offset-3">
				<h2>Inscription</h2>
				{{ form_start(form) }}
				{{ form_row(form.username, {'attr': {'class': 'form-control', 'placeholder': 'JeanJack'}}) }}
				{{ form_row(form.email, {'type': 'email', 'attr': {'class': 'form-control', 'placeholder': 'Jean@jack.fr'}}) }}
				{{ form_row(form.password, {'type': 'password', 'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
				<button type="submit" class="btn btn-success mt-3">S'inscrire</button>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}