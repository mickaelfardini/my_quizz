{% extends 'base.html.twig' %}

{% block title %}Edit Profile - {{app.user.username}}{% endblock %}

{% block body %}
<h1>Edit Profile - {{app.user.username}}</h1>
<div class="container col-6">
{{ form_start(form) }}
<div class="form-group">
	{{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
	{{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
	{{ form_row(form.password, {'attr': {'class': 'form-control', 'value': ''}, 'label': 'Confirm Password', 'type': 'password'}) }}
</div>
<button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
</div>


{% endblock %}
