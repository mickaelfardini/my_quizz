{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
<h1>Question</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ question.id }}</td>
        </tr>
        <tr>
            <th>Question</th>
            <td>{{ question.question }}</td>
        </tr>
        {% for answer in question.answers %}
        <tr>
            <th>Answer {{loop.index}}</th>
            <td>{{ answer.answer }}</td>
        </tr>
        {% endfor %}
        <tr>
            <th>Correct Answer</th>
            <td>{{ question.answer.answer }}</td>
        </tr>
    </tbody>
</table>

<a href="{{ path('question_index') }}">back to list</a>

<a href="{{ path('question_edit', {'id': question.id}) }}">edit</a>

{{ include('admin/question/_delete_form.html.twig') }}
{% endblock %}
