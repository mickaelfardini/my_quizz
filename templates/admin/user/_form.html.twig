	<div class="col-sm-12">
		{{ form_start(form) }}
		<div class="form-group">
			{{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_row(form.password, {'type': 'password', 'attr': {
			'class': 'form-control',
			'readonly': true}}) }}
		</div>
		<div class="form-group">
			{{ form_row(form.active, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group form-check mb-5">
			{{ form_row(form.roles, {'attr': {'class': 'form-check-input'}}) }}
		</div>
		<button class="btn btn-primary">{{ button_label|default('Save') }}</button>
		{{ form_end(form) }}
	</div>
